<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="24.0"
    xmlns="http://javafx.com/javafx/8.0.171"
    xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mdlb.controllers.StartServerController">
    <children>
        <Label text="Please select the correct IP address of the system" />
        <ComboBox fx:id="ipComboBox" maxWidth="Infinity" />
        <Label text="Please enter the port number" />
        <TextField fx:id="portTextField" />
        <Button fx:id="startServerButton" text="Start the chat server" onAction="#startServer" />
    </children>
    <padding>
        <Insets bottom="24.0" left="24.0" right="24.0" top="24.0" />
    </padding>
</VBox>
