<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Pos?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane xmlns="http://javafx.com/javafx/17"
  xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mdlb.controllers.HomeController">
  <VBox alignment="CENTER" spacing="10">
    <Label text="Choose the program mode"/>
    <Button text="Set the program as the server" onAction="#loadServerApplication"/>
    <Button text="Set the program as the client" onAction="#loadClientApplication"/>
  </VBox>
</StackPane>
